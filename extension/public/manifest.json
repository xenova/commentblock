{
  "manifest_version": 3,
  "name": "CommentBlock",
  "description": "Block spam/scam YouTube comments",
  "version": "0.0.1",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "css": [
        "styles/style.css"
      ],
      "js": [
        "scripts/defaults.js",
        "scripts/utils.js",
        "scripts/storage.js",
        "scripts/labels.js",
        "scripts/preprocess.js",
        "scripts/emojis.js",
        "scripts/detection.js",
        "scripts/content.js"
      ],
      "matches": [
        "https://*.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "24": "icons/icon.png",
      "32": "icons/icon.png",
      "128": "icons/icon-128x128.png"
    },
    "default_title": "CommentBlock",
    "default_popup": "popup/popup.html"
  }
}